<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtbaslik"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="-101dp"
        android:layout_toEndOf="@+id/imgKamp"
        android:text="KİŞİ SAYISI:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtbaslik"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="-32dp"
        android:layout_toEndOf="@+id/imgKamp"
        android:text="METİN:"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imgKamp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtbaslik"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imgKamp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="-219dp"
        android:text="Food name"
        android:textAlignment="center"
        android:textColor="#0e11d1"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/txtmetin"
        android:layout_width="112dp"
        android:layout_height="61dp"
        android:layout_below="@+id/txtbaslik"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="21dp"
        android:layout_toEndOf="@+id/imgKamp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtksayisi"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtmetin"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/imgKamp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtbaslik"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@+id/imgKamp"
        android:text="BAŞLIK:"
        android:textStyle="bold" />
</RelativeLayout>